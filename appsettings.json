{
  "AllowedHosts": "*",
  "ApplicationInsights": {
    "InstrumentationKey": "9c86d9ae-5ca5-4137-92b3-a711814e136d"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.ApplicationInsights"
    ],
    "MinimumLevel": {
